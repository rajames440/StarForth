#-*- shell-script -*- :mode=shellscript:

KODKODI="$COMPONENT"
KODKODI_VERSION="1.5.7"
KODKODI_JAR="$KODKODI/jar"
KODKODI_JNI="$KODKODI/jni"

KODKODI_CLASSPATH="$KODKODI_JAR/antlr-runtime-3.1.1.jar:$KODKODI_JAR/kodkod-1.5.jar:$KODKODI_JAR/kodkodi-$KODKODI_VERSION.jar:$KODKODI_JAR/sat4j-2.3.jar"
KODKODI_JAVA_LIBRARY_PATH="$KODKODI_JNI/${ISABELLE_WINDOWS_PLATFORM64:-$ISABELLE_PLATFORM64}"

case "$ISABELLE_PLATFORM_FAMILY" in
  linux)
    export LD_LIBRARY_PATH="$KODKODI_JAVA_LIBRARY_PATH:$LD_LIBRARY_PATH"
    ;;
  macos)
    export JAVA_LIBRARY_PATH="$KODKODI_JAVA_LIBRARY_PATH:$JAVA_LIBRARY_PATH"
    ;;
  windows)
    export PATH="$KODKODI_JAVA_LIBRARY_PATH:$PATH"
    ;;
esac

classpath "$KODKODI_CLASSPATH"
